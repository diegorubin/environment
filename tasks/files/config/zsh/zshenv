# Exports
export EDITOR=nvim
export KUBE_EDITOR=vim
export TODOIST_API_KEY="$(golem remind todoist)"

export PATH="/opt/java/bin:$PATH"
export PATH="$PATH:/opt/node/bin"
export PATH="$PATH:/opt/flutter/bin"
export PATH="$PATH:/opt/gradle/bin"
export PATH="$PATH:/opt/maven/bin"
export PATH="$PATH:/opt/istio/bin"
export PATH="$PATH:/opt/kafka/bin"
export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/.cargo/bin"
export PATH="$PATH:$HOME/go/bin"
export PATH="$PATH:$HOME/.scripts/bin"
export PATH="$PATH:/snap/bin"

# Pass Store
export PASSWORD_STORE_DIR="$HOME/SafeBox/passwords"

# Aliases
alias k=kubectl

# Docker Functions
clear_containers() {
	docker stop $(docker ps -a -q)
	docker rm $(docker ps -a -q)
}

clear_images() {
	docker rmi -f $(docker images -a -q)
}

# Open Mapper
open_external() {
  sudo cryptsetup -v luksOpen /dev/sda2 external
}

# Rust Configuration
[[ -s "$HOME/.cargo/env" ]] && source "$HOME/.cargo/env"

# RVM configuration
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# load fzf
[[ -s ~/.fzf.zsh ]] && source ~/.fzf.zsh

# Load private resources
[[ -s "$HOME/.zsh_private" ]] && source "$HOME/.zsh_private"
